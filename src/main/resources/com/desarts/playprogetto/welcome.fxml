<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.desarts.playprogetto.WelcomeController" alignment="CENTER" spacing="20">
    <!-- Intestazione -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="loginButton" text="Login" onAction="#handleLoginButtonAction"/>
        <Button fx:id="classificaButton" text="Classifica" onAction="#handleClassificaButtonAction"/>
        <Button fx:id="impostazioniButton" text="Impostazioni" onAction="#handleImpostazioniButtonAction"/>
    </HBox>

    <!-- Nome dell'applicazione -->
    <Label text="Progetto Play by DesArts" style="-fx-font-size: 24px;"/>

    <!-- Contenuto principale -->
    <VBox alignment="CENTER" spacing="10">
        <!-- Tasto "Inizia" -->
        <Button fx:id="iniziaButton" text="Inizia" disable="true" onAction="#handleIniziaButtonAction"/>
    </VBox>

    <!-- Footer -->
    <HBox alignment="CENTER_RIGHT" spacing="10" padding="10">
        <Label text="Username" fx:id="usernameLabel"/>
        <!-- Aggiungi altre icone o azioni qui se necessario -->
    </HBox>
</VBox>
