<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.desarts.playprogetto.CompletaFraseController">
    <children>
        <HBox alignment="TOP_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="homeButton" onAction="#handleHome" style="-fx-font-size: 12;" text="Torna alla home" />
            </children>
        </HBox>
        <Label fx:id="questionLabel" prefHeight="100.0" style="-fx-font-size: 16pt;" />
        <VBox alignment="CENTER" prefHeight="350.0" prefWidth="760.0" spacing="20.0">
            <children>
                <HBox alignment="CENTER" prefHeight="75.0" prefWidth="760.0" spacing="20.0">
                    <children>
                        <Button fx:id="answerButton1" mnemonicParsing="false" style="-fx-font-size: 14pt;" />
                        <Button fx:id="answerButton2" mnemonicParsing="false" style="-fx-font-size: 14pt;" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="75.0" prefWidth="760.0" spacing="20.0">
                    <children>
                        <Button fx:id="answerButton3" mnemonicParsing="false" style="-fx-font-size: 14pt;" />
                        <Button fx:id="answerButton4" mnemonicParsing="false" style="-fx-font-size: 14pt;" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
            <children>
                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextQuestion" style="-fx-font-size: 14pt;" text="Next" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
