<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- Root container VBox -->

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.desarts.playprogetto.CompletaFraseController">
    <children>
        <!-- Top HBox with a home button -->
        <HBox alignment="TOP_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="homeButton" onAction="#handleHome" style="-fx-font-size: 12;" text="Torna alla home" />
            </children>
        </HBox>

        <!-- Label for the question text -->
        <Label fx:id="questionLabel" prefHeight="100.0" style="-fx-font-size: 16pt;" />

        <!-- ScrollPane for the question image -->
        <ScrollPane fx:id="scroll" prefHeight="300.0" prefWidth="760.0">
            <content>
                <VBox fx:id="vBox" fillWidth="true">
                    <!-- ImageView to display the question image -->
                    <ImageView fx:id="questionImageView" fitHeight="355.0" fitWidth="748.0" layoutX="2.0" layoutY="-92.0" preserveRatio="true"/>
                </VBox>
            </content>
        </ScrollPane>

        <!-- VBox for answer buttons -->
        <VBox alignment="CENTER" prefHeight="360.0" prefWidth="760.0" spacing="20.0">
            <children>
                <!-- First row of answer buttons -->
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="760.0" spacing="20.0">
                    <children>
                        <Button fx:id="answerButton1" mnemonicParsing="false" prefHeight="100.0" prefWidth="370.0" style="-fx-font-size: 14pt;" wrapText="true" />
                        <Button fx:id="answerButton2" mnemonicParsing="false" prefHeight="100.0" prefWidth="370.0" style="-fx-font-size: 14pt;" wrapText="true" />
                    </children>
                </HBox>
                <!-- Second row of answer buttons -->
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="760.0" spacing="20.0">
                    <children>
                        <Button fx:id="answerButton3" mnemonicParsing="false" prefHeight="100.0" prefWidth="370.0" style="-fx-font-size: 14pt;" wrapText="true" />
                        <Button fx:id="answerButton4" mnemonicParsing="false" prefHeight="100.0" prefWidth="370.0" style="-fx-font-size: 14pt;" wrapText="true" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Bottom HBox with a next button -->
        <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
            <children>
                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextQuestion" style="-fx-font-size: 14pt;" text="Next" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>