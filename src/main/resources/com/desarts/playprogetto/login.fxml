<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.desarts.playprogetto.LoginController" alignment="CENTER" spacing="20">
    <!-- Intestazione -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="backButton" text="←" onAction="#handleBackButtonAction"/>
    </HBox>

    <!-- Titolo -->
    <Label text="Login" style="-fx-font-size: 24px;"/>

    <!-- Form di Login -->
    <VBox alignment="CENTER" spacing="10">
        <HBox spacing="10" alignment="CENTER">
            <Label text="Username:"/>
            <TextField fx:id="usernameField"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Password:"/>
            <PasswordField fx:id="passwordField"/>
        </HBox>
        <Button fx:id="loginButton" text="Login" onAction="#handleLoginButtonAction"/>
        <Button fx:id="registerButton" text="Registrati" onAction="#handleRegisterButtonAction"/>
    </VBox>
</VBox>
