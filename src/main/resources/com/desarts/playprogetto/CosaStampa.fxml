<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.desarts.playprogetto.CosaStampaController">
    <children>
        <HBox alignment="TOP_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="homeButton" onAction="#handleHome" style="-fx-font-size: 12;" text="Torna alla home" />
            </children>
        </HBox>
        <Label fx:id="questionLabel" prefHeight="100.0" style="-fx-font-size: 16pt;" />
        <ScrollPane prefHeight="294.0" prefWidth="760.0">
            <content>
                <VBox fx:id="vBox" fillWidth="true">
                    <ImageView fx:id="questionImageView" fitHeight="355.0" fitWidth="748.0" layoutX="2.0" layoutY="-92.0" preserveRatio="true" />
                </VBox>
            </content>
        </ScrollPane>
        <VBox alignment="CENTER" prefHeight="115.0" prefWidth="760.0" spacing="20.0">
            <children>
                <HBox alignment="CENTER" prefHeight="81.0" prefWidth="760.0" spacing="20.0">
                    <children>
                        <TextArea fx:id="text" promptText="scrivi qui la risposta" />
                        <Button fx:id="conferma" mnemonicParsing="false" onAction="#conferma" text="Conferma" />
                    </children></HBox>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
            <children>
                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextQuestion" style="-fx-font-size: 14pt;" text="Next" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
