<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.desarts.playprogetto.CosaStampaController" prefWidth="600.0" prefHeight="400.0">
    <children>
        <HBox alignment="TOP_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="homeButton" text="Torna alla home" onAction="#handleHome" style="-fx-font-size: 12pt;"/>
            </children>
        </HBox>
        <Label fx:id="questionLabel" style="-fx-font-size: 16pt;"/>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="answerButton1" mnemonicParsing="false" style="-fx-font-size: 14pt;"/>
                        <Button fx:id="answerButton2" mnemonicParsing="false" style="-fx-font-size: 14pt;"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="answerButton3" mnemonicParsing="false" style="-fx-font-size: 14pt;"/>
                        <Button fx:id="answerButton4" mnemonicParsing="false" style="-fx-font-size: 14pt;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
            <children>
                <Button fx:id="nextButton" mnemonicParsing="false" text="Next" onAction="#nextQuestion" style="-fx-font-size: 14pt;"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
